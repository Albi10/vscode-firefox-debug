{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "debug server",
			"type": "node",
			"request": "launch",
			"program": "${workspaceRoot}/out/firefoxDebugSession.js",
			"stopOnEntry": false,
			"args": [ "--server=4711" ],
			"sourceMaps": true,
			"outDir": "${workspaceRoot}/out"
		},
		{
			"name": "run tests",
			"type": "node",
			"request": "launch",
			"program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
			"stopOnEntry": false,
			"args": [ "--no-timeouts", "--colors", "out/test/test*.js" ],
			"cwd": "${workspaceRoot}",
			"sourceMaps": true,
			"outDir": "${workspaceRoot}/out"
		}
	]
}