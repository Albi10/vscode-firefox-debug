{
	"editor.insertSpaces": false,
	"files.exclude": {
		".git": true,
		"out": true,
		"node_modules": true,
		".nyc_output": true,
		"coverage": true
	},
	"editor.rulers": [100],
	"typescript.tsdk": "./node_modules/typescript/lib",
	"mochaExplorer.files": "src/test/*.ts",
	"mochaExplorer.require": "ts-node/register",
	"mochaExplorer.timeout": 20000,
	"mochaExplorer.exit": true
}
