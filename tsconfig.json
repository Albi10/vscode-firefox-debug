{
	"compilerOptions": {
		"target": "es2015",
		"lib": [ "es2015" ],
		"module": "commonjs",
		"importHelpers": true,
		"outDir": "out",
		"sourceMap": true,
		"noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"removeComments": true,
		"strictNullChecks": true,
		"noUnusedLocals": true
	},
	"include": [
		"src/firefoxDebugAdapter.ts",
		"src/extension.ts",
		"src/util/forkedLauncher.ts",
		"src/firefox/protocol.d.ts",
		"src/typings/*.d.ts",
		"src/test/test*.ts"
	]
}