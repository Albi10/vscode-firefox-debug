{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"sourceMap": true,
		"rootDir": "src",
		"outDir": "out",
		"noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"removeComments": true,
		"strictNullChecks": true
	},
	"include": [
		"src/firefoxDebugSession.ts",
		"src/**/*.d.ts",
		"src/test/test*.ts"
	]
}